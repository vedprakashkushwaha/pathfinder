			<section>
				<div class="mt-10">
					<div class="main_title">
						<h1>Insert videos</h1>

						<%= form_for(@video, url: videos_path, method: :post ) do |form| %>
						
						<p>
							
							<%= form.text_field :title , placeholder: "Title", :class =>"input-style" %>
						</p>
						<br>
						<p>
							
							<%= form.text_area :description , placeholder: "Description", :class =>"input-style" %>
						</p>
						<br>

						<p>
							
							<%= form.text_area :link , placeholder: "Link", :class =>"input-style" %>
						</p>


						<select name="[video][standard]" class="input-style w-33">
							<option >Select Class</option>
							<option value="1">class 1</option>
							<option value="2">class 2</option>
							<option value="3">class 3</option>
