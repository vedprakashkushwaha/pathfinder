<!doctype html>
<html lang="en">
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link rel="icon" href="img/favicon.png" type="image/png">
        <title>BulkApp</title>
    </head>
    <body data-spy="scroll" data-target="#mainNav" data-offset="70">
        
        <!--================Header Menu Area =================-->
        <header class="header_area navbar_fixed">
            <div class="main_menu" id="mainNav">
              <nav class="navbar navbar-expand-lg navbar-light">
          <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <a class="navbar-brand logo_h text-white" href="index.html">Pathfinder.com</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse offset" id="navbarSupportedContent">
              <ul class="nav navbar-nav menu_nav ml-auto">
                <li class="nav-item active"><a class="nav-link" href="#home">Home</a></li> 
                <%if current_user.present? %>
                 <li class="nav-item"><%= link_to "Logout", destroy_user_session_path, method: :delete, :class =>"nav-link" %> </li>

                 <%else%>

                 <li class="nav-item">
                  <%= link_to "Login", new_user_session_path, :class =>"nav-link"  %>
                 </li>
                 <li class="nav-item">
                  <%= link_to "Sign up", new_user_registration_path, :class =>"nav-link"  %>
                 </li>
                   <% end  %>

               <li class="nav-item">
                <a href="https://pathfinderofficial.blogspot.com/" class="nav-link "  role="button" aria-haspopup="true" aria-expanded="false">Blog</a>
              </li>
              <li class="nav-item"><%= link_to "About Us", login_about_path, :class =>"nav-link" %> 
              </li>
              </ul>
            </div> 
          </div>
              </nav>
            </div>
        </header>
        <section>
        <div align="center">
          <div class="card w-25 mt-10 ">
<h2>Change your password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label :password, "New password" %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password" , :class =>"input-style"%>
  </div>
<br>
  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password" , :class =>"input-style"%>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "Submit" , :class =>"main_btn btn-all"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
</section>
 </body>
</html>